        <Inic_Configurableoption>
            <version>0.1.1</version>
        </Inic_Configurableoption>
    </modules>
    <frontend>
        <layout>
            <updates>
                <configurableoption>
                    <file>configurableoption.xml</file>
                </configurableoption>
            </updates>
        </layout>
    </frontend>
    <global>
    	<blocks>
            <configurableoption>
                <class>Inic_Configurableoption_Block</class>
            </configurableoption>
        </blocks>
        <blocks>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>Inic_Configurableoption_Block_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
    </global>
</config>